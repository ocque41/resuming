# OpenAI API key (required)
OPENAI_API_KEY=sk-your-openai-api-key

# Server configuration
PORT=8000
HOST=0.0.0.0

# AWS S3 configuration for document storage
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-document-bucket

# Optional: Set logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Optional: Set model to use (defaults to gpt-4o)
OPENAI_MODEL=gpt-4o

# Optional: Database connection string (if using a database)
DATABASE_URL=postgresql://user:password@localhost/dbname 